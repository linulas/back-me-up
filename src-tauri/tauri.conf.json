{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Back me up",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"dialog": {
				"open": true,
				"confirm": true
			},
			"fs": {
				"all": false,
				"createDir": true,
				"exists": true,
				"readFile": true,
				"removeFile": true,
				"writeFile": true,
				"scope": [
					"$CACHE",
					"$CACHE/*/**",
					"$CONFIG",
					"$CONFIG/*/**",
					"$APPCONFIG",
					"$APPCONFIG/*/**",
					"$DATA",
					"$DATA/*/**",
					"$APPDATA",
					"$APPDATA/*/**",
					"$APPLOG",
					"$APPLOG/*/**"
				]
			},
			"path": {
				"all": true
			},
			"window": {
				"create": true,
				"show": true,
				"close": true
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "BackMeUp",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"endpoints": ["https://gist.githubusercontent.com/linulas/a099576d63408955226344322e2942b8/raw/bmu_latest.json"],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBOEM3QjA2MDcxNzExQ0IKUldUTEVSY0hCbnVNNnRPRzl3RXhnL3I1V0Z6VXIxdmNldDBHWDRobzlHVG1oR0N2dTZZVmlUaVoK"
		},
		"windows": [
			{
				"label": "main",
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "BMU",
				"width": 800
			}
		]
	}
}
